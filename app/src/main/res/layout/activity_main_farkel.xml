<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainFarkel">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:columnCount="3"
        android:rowCount="9"
        android:id="@+id/grid_top"
        android:useDefaultMargins="false">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Button1"
            android:layout_row="0"
            android:layout_column="0"
            android:src="@drawable/die1"
            android:onClick="onclick1" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Button2"
            android:src="@drawable/die2"
            android:layout_row="0"
            android:layout_column="1"
            android:onClick="onclick2" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Button3"
            android:src="@drawable/die3"
            android:layout_row="0"
            android:layout_column="2"
            android:onClick="onclick3" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Button4"
            android:src="@drawable/die4"
            android:layout_row="1"
            android:layout_column="0"
            android:onClick="onclick4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keep"
            android:id="@+id/KeeptextView"
            android:layout_row="2"
            android:layout_column="0"
            android:elegantTextHeight="false"
            android:textStyle="bold" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Button5"
            android:src="@drawable/die5"
            android:layout_row="1"
            android:layout_column="1"
            android:onClick="onclick5" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Button6"
            android:src="@drawable/die6"
            android:layout_row="1"
            android:layout_column="2"
            android:onClick="onclick6" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Solve"
            android:id="@+id/solvebutton"
            android:layout_row="2"
            android:layout_column="2"
            android:onClick="onclickSolve" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/keep1"
            android:layout_row="3"
            android:layout_column="0"
            android:onClick="onclickKeep1" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/keep2"
            android:layout_row="4"
            android:layout_column="0"
            android:onClick="onclickKeep2" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/keep3"
            android:layout_row="5"
            android:layout_column="0"
            android:onClick="onclickKeep3" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/keep4"
            android:layout_row="6"
            android:layout_column="0"
            android:onClick="onclickKeep4" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/keep5"
            android:layout_row="7"
            android:layout_column="0"
            android:onClick="onclickKeep5" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/keep6"
            android:layout_row="8"
            android:layout_column="0"
            android:onClick="onclickKeep6" />

    </GridLayout>

</RelativeLayout>
