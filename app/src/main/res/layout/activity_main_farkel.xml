<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainFarkel">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:columnCount="4"
        android:rowCount="7"
        android:id="@+id/grid_top"
        android:useDefaultMargins="false">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Button1"
            android:layout_row="0"
            android:layout_column="0"
            android:src="@drawable/die1"
            android:onClick="onclick1"
            android:background="#ffededed"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Button2"
            android:src="@drawable/die2"
            android:layout_row="0"
            android:layout_column="1"
            android:onClick="onclick2"
            android:background="#ffededed"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Button3"
            android:src="@drawable/die3"
            android:layout_row="0"
            android:layout_column="2"
            android:onClick="onclick3"
            android:background="#ffededed"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Button4"
            android:src="@drawable/die4"
            android:layout_row="1"
            android:layout_column="0"
            android:onClick="onclick4"
            android:background="#ffededed"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Button5"
            android:src="@drawable/die5"
            android:layout_row="1"
            android:layout_column="1"
            android:onClick="onclick5"
            android:background="#ffededed"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="2dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Button6"
            android:src="@drawable/die6"
            android:layout_row="1"
            android:layout_column="2"
            android:onClick="onclick6"
            android:background="#ffededed"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Value\n 0\nAdvised\n 0\nExpected\n 384.2"
            android:id="@+id/ValueTextView"
            android:layout_row="1"
            android:layout_column="3"
            android:elegantTextHeight="false"
            android:singleLine="false"
            android:phoneNumber="false"
            android:password="false"
            android:layout_gravity="left|center_vertical" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stay"
            android:id="@+id/StayButton"
            android:layout_row="2"
            android:layout_column="0"
            android:onClick="onclickStay"
            android:clickable="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Advice"
            android:id="@+id/AdviceButton"
            android:layout_row="2"
            android:layout_column="1"
            android:onClick="onclickAdvice"
            android:clickable="true"
            android:nestedScrollingEnabled="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Roll"
            android:id="@+id/RollButton"
            android:layout_row="2"
            android:layout_column="2"
            android:onClick="onclickRoll"
            android:clickable="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/keep1"
            android:layout_row="3"
            android:layout_column="0"
            android:onClick="onclickKeep1"
            android:src="@drawable/die0"
            android:background="#ffededed"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/keep2"
            android:layout_row="4"
            android:layout_column="0"
            android:onClick="onclickKeep2"
            android:src="@drawable/die0"
            android:background="#ffededed"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/keep3"
            android:layout_row="3"
            android:layout_column="1"
            android:onClick="onclickKeep3"
            android:src="@drawable/die0"
            android:background="#ffededed"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/keep4"
            android:layout_row="4"
            android:layout_column="1"
            android:onClick="onclickKeep4"
            android:src="@drawable/die0"
            android:background="#ffededed"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/keep5"
            android:layout_row="3"
            android:layout_column="2"
            android:onClick="onclickKeep5"
            android:src="@drawable/die0"
            android:background="#ffededed"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/keep6"
            android:layout_row="4"
            android:layout_column="2"
            android:onClick="onclickKeep6"
            android:src="@drawable/die0"
            android:background="#ffededed"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Points\n0"
            android:id="@+id/PlayerTextView"
            android:layout_row="0"
            android:layout_column="3"
            android:gravity="fill_horizontal"
            android:layout_gravity="top" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manual\nOnly"
            android:id="@+id/manualTextView"
            android:layout_row="4"
            android:layout_column="3"
            android:layout_gravity="bottom|center_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:id="@+id/ResetButton"
            android:layout_row="5"
            android:layout_column="0"
            android:clickable="true"
            android:onClick="onclickReset" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset Hand"
            android:id="@+id/ResetHand"
            android:layout_row="5"
            android:layout_column="1"
            android:onClick="onclickResetHand"
            android:clickable="true"
            android:layout_gravity="center"
            android:layout_columnSpan="2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hold"
            android:id="@+id/HoldButton"
            android:layout_row="5"
            android:layout_column="3"
            android:onClick="onclickHold"
            android:clickable="true"
            style="?android:attr/buttonStyleSmall"
            android:layout_gravity="center" />

    </GridLayout>

</RelativeLayout>
