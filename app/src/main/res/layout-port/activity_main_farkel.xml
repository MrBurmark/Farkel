<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainFarkel">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/grid_top"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/grid_top1"
            android:orientation="horizontal"
            android:background="@android:color/transparent">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Button1"
                android:src="@drawable/die1"
                android:background="@android:color/transparent"
                android:onClick="onclick1"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Button2"
                android:src="@drawable/die2"
                android:background="@android:color/transparent"
                android:onClick="onclick2"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Button3"
                android:src="@drawable/die3"
                android:background="@android:color/transparent"
                android:onClick="onclick3"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/grid_top2"
            android:orientation="horizontal"
            android:background="@android:color/transparent">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Button4"
                android:src="@drawable/die4"
                android:background="@android:color/transparent"
                android:onClick="onclick4"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Button5"
                android:src="@drawable/die5"
                android:background="@android:color/transparent"
                android:onClick="onclick5"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="2dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Button6"
                android:src="@drawable/die6"
                android:background="@android:color/transparent"
                android:onClick="onclick6"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/grid_top"
        android:id="@+id/grid_middle"
        android:orientation="horizontal"
        android:background="@android:color/transparent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stay"
            android:id="@+id/StayButton"
            android:onClick="onclickStay"
            android:clickable="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/advice"
            android:id="@+id/AdviceButton"
            android:onClick="onclickAdvice"
            android:clickable="true"
            android:nestedScrollingEnabled="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/roll"
            android:id="@+id/RollButton"
            android:onClick="onclickRoll"
            android:clickable="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/grid_middle"
        android:id="@+id/grid_bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/grid_bottom1"
            android:orientation="horizontal"
            android:background="@android:color/transparent">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/keep1"
                android:onClick="onclickKeep1"
                android:src="@drawable/die0"
                android:background="@android:color/transparent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/keep2"
                android:onClick="onclickKeep2"
                android:src="@drawable/die0"
                android:background="@android:color/transparent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/keep3"
                android:onClick="onclickKeep3"
                android:src="@drawable/die0"
                android:background="@android:color/transparent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/grid_bottom2"
            android:orientation="horizontal"
            android:background="@android:color/transparent">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/keep4"
                android:onClick="onclickKeep4"
                android:src="@drawable/die0"
                android:background="@android:color/transparent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/keep5"
                android:onClick="onclickKeep5"
                android:src="@drawable/die0"
                android:background="@android:color/transparent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/keep6"
                android:onClick="onclickKeep6"
                android:src="@drawable/die0"
                android:background="@android:color/transparent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/grid_top"
        android:layout_toEndOf="@id/grid_top"
        android:id="@+id/grid_right"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="@string/hand_value"
            android:id="@+id/ValueTextView"
            android:elegantTextHeight="false"
            android:singleLine="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ValueTextView"
            android:text="@string/points"
            android:id="@+id/PlayerTextView"
            android:gravity="fill_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ResetButton"
            android:text="@string/manual_only"
            android:id="@+id/manualTextView"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ResetHand"
            android:text="@string/reset"
            android:id="@+id/ResetButton"
            android:clickable="true"
            android:onClick="onclickReset"
            style="?android:attr/buttonStyleSmall"
            android:elegantTextHeight="false" />

        <Button

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/HoldButton"
            android:text="@string/reset_hand"
            android:id="@+id/ResetHand"
            android:onClick="onclickResetHand"
            android:clickable="true"
            style="?android:attr/buttonStyleSmall"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="@string/hold"
            android:id="@+id/HoldButton"
            android:onClick="onclickHold"
            android:clickable="true"
            style="?android:attr/buttonStyleSmall"/>

    </RelativeLayout>

</RelativeLayout>
